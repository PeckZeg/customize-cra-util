{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "lib",
    "sourceMap": false,
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "allowJs": true,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "jsx": "preserve",
    "lib": ["ESNext"],
    "rootDir": ".",
    "declaration": true
  },
  "include": ["src/**/*"]
}
